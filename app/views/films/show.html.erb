<div class="container">
  <h1 class="accent-word"><%= @film.title %></h1>

<div id="review-list">

<p>Average Rating: <%= @film.avg_rating %></p>

<% if logged_in? && current_user.judge? %>
  <% if @film.ratings.where(user_id: current_user.id).length > 0  %>
    <p>Thank you for your rating</p>
  <% else %>
    <p>Rating</p>
    <%= form_for @rating do |f| %>
      <%= f.select(:score, Rating::JUDGE_SCORE) %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :film_id, :value => @film.id %><br>
      <%= f.submit "Rate", :class => "black-button" %>
    <% end %>
  <% end %>
<% elsif logged_in? && current_user.judge != true %>
  <% if @film.ratings.where(user_id: current_user.id).length > 0 %>
      <p>Thank you for your rating</p>
  <% else %>
    <p>Rating</p>
    <%= form_for @rating do |f| %>
      <%= f.select(:score, Rating::USER_SCORE) %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.hidden_field :film_id, :value => @film.id %><br><br>
      <%= f.submit "Rate", :class => "black-button" %>
    <% end %>
  <% end %>
<% end %>

<h3>Judge Reviews</h3>
  <% @film.judge_review.each do |review| %>
    <h4>Review by: <%= review.user.username%><br><%= review.body %><br></h4>
     <% if logged_in? %>
    <%= link_to "Comment on this review", new_review_comment_path(review), class:"black-button" %>
    <% end %><br>
    <div class="comment-list">
      <% review.comments.each do |comment| %>
      <h5>Comment by: <%= comment.user.username%><br><%= comment.body %></h5><br>
      <% end %>
    </div>
  <% end %>


 <h3>User Reviews</h3>
  <% @film.user_review.each do |review| %>
    <h4>Review by: <%= review.user.username%><br><%= review.body %><br></h4>
     <% if logged_in? %>
    <%= link_to "Comment on this review", new_review_comment_path(review), class:"black-button" %>
    <% end %><br>
    <div class="comment-list">
      <% review.comments.each do |comment| %>
      <h5>Comment by: <%= comment.user.username%><br><%= comment.body %></h5><br>
      <% end %>
    </div>
  <% end %>

</div>

<% if @film.reviews.empty? %>
  <h3>This film has no reviews yet</h3>
<% end %>

<% if logged_in? %>
<br><br><br>
  <%= link_to "Write a review", new_review_path(params: {film_id: @film.id}), class:"write-review black-button" %>
<% end %>

<div id="review-form-holder"></div>

</div>
