<div class="container">

  <h1 class="uppercase">Register <span class="accent-word">here</span></h1>

<div class="form-box">

<%= form_for @user do |f| %>

  <h4><%= f.label :username %> </h4>
    <%= f.text_field :username %>

  <h4><%= f.label :password %></h4>
    <%= f.password_field :password %>

<% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <h5 class="red"><%= msg %></h5>
      <% end %>
<% end %>

</div>

  <%= f.submit "Register", :class => "button" %>

<% end %>


</div>